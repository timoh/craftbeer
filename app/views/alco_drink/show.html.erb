<%- model_class = AlcoDrink -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @alco_drink.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @alco_drink.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @alco_drink.type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:size) %>:</strong></dt>
  <dd><%= @alco_drink.size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @alco_drink.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:alko_id) %>:</strong></dt>
  <dd><%= @alco_drink.alko_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:best_rev_candidate_score) %>:</strong></dt>
  <dd><%= @alco_drink.best_rev_candidate_score %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              alco_drinks_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_alco_drink_path(@alco_drink), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              alco_drink_path(@alco_drink),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
